{
    "name": "kgames",
    "private": true,
    "workspaces": [
        "packages/common",
        "packages/web",
        "packages/server"
    ],
    "scripts": {        
        "common:build": "npm run build --workspace @kgames/common",

        "web:dev": "npm run dev --workspace @kgames/web",
        "web:build": "npm run build --workspace @kgames/web",
        "web:storybook": "npm run storybook --workspace @kgames/web",

        "server:dev": "npm run dev --workspace @kgames/server",
        "server:build": "npm run build --workspace @kgames/server",
        "server": "cd packages/server && npm run start",

        "clean": "npm run clean --workspaces"
    },
    "devDependencies": {
        "rimraf": "^3.0.2",
        "typescript": "^4.3.5"
    }
}
