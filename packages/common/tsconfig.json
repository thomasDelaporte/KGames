{

    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",

        "rootDir": "src",
        "outDir": "dist",

        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
    },

    "include": [ "src/**/*.ts" ]
}
